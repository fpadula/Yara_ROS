<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="yara">
    
    <link name="base_link">
        <visual>
            <geometry>
                <mesh filename="package://yara_meshes/files/base.obj"/>
            </geometry>
            <origin rpy="0 0 ${pi}" xyz="0 0 0"/>            
        </visual>
    </link>

    <link name="link_1">
        <visual>
            <geometry>
                <mesh filename="package://yara_meshes/files/link1.obj"/>
            </geometry>
            <origin rpy="0 0 ${pi}" xyz="0 0 -0.054355"/>
        </visual>
    </link>

    <joint name="base_to_link_1" type="revolute">
        <axis xyz="0 0 1"/>
        <limit effort="1000.0" lower="${-pi/2}" upper="${pi/2}" velocity="0.5"/>
        <parent link="base_link"/>
        <child link="link_1"/>
        <origin rpy="0 0 0" xyz="0 0 0.054355"/>
    </joint>

    <link name="link_2">
        <visual>
            <geometry>
                <mesh filename="package://yara_meshes/files/link2.obj"/>
            </geometry>
            <origin rpy="0 0 ${pi}" xyz="0 -.017415 -.109967"/>
        </visual>
    </link>

    <joint name="link_1_to_link_2" type="revolute">
        <axis xyz="1 0 0"/>
        <limit effort="1000.0" lower="${-pi/2}" upper="${pi/2}" velocity="0.5"/>
        <parent link="link_1"/>
        <child link="link_2"/>
        <origin rpy="0 0 0" xyz="0 .017415 ${.109967 - 0.054355}"/>
    </joint>

    <link name="link_3">
        <visual>
            <geometry>
                <mesh filename="package://yara_meshes/files/link3.obj"/>
            </geometry>
            <origin rpy="0 0 ${pi}" xyz="0 -.017415 -.229967"/>
        </visual>
    </link>

    <joint name="link_2_to_link_3" type="revolute">
        <axis xyz="1 0 0"/>
        <limit effort="1000.0" lower="${-pi/2}" upper="${pi/2}" velocity="0.5"/>
        <parent link="link_2"/>
        <child link="link_3"/>
        <origin rpy="0 0 0" xyz="0 0 ${.229967 - (0.109967)}"/>
    </joint>

    <link name="link_4">
        <visual>
            <geometry>
                <mesh filename="package://yara_meshes/files/link4.obj"/>
            </geometry>
            <origin rpy="0 0 ${pi}" xyz="0 -.041358 -.273945"/>
        </visual>
    </link>

    <joint name="link_3_to_link_4" type="revolute">
        <axis xyz="0 1 0"/>
        <limit effort="1000.0" lower="${-pi/2}" upper="${pi/2}" velocity="0.5"/>
        <parent link="link_3"/>
        <child link="link_4"/>
        <origin rpy="0 0 0" xyz="0 ${.041358 - .017415} ${.273945 - (0.229967)}"/>
    </joint>

    <link name="link_5">
        <visual>
            <geometry>
                <mesh filename="package://yara_meshes/files/link5.obj"/>
            </geometry>
            <origin rpy="0 0 ${pi}" xyz="0 -0.186507 -.277517"/>
        </visual>
    </link>

    <joint name="link_4_to_link_5" type="revolute">
        <axis xyz="-1 0 0"/>
        <limit effort="1000.0" lower="${-pi/2}" upper="${pi/2}" velocity="0.5"/>
        <parent link="link_4"/>
        <child link="link_5"/>
        <origin rpy="0 0 0" xyz="0 ${.186507 - .041358} ${.277517 - (0.273945)}"/>
    </joint>

    <link name="link_6">
        <visual>
            <geometry>
                <mesh filename="package://yara_meshes/files/link6.obj"/>
            </geometry>
            <origin rpy="0 0 ${pi}" xyz="0 -0.228778 -.27839"/>
        </visual>
    </link>

    <joint name="link_5_to_link_6" type="revolute">
        <axis xyz="0 1 0"/>
        <limit effort="1000.0" lower="${-pi/2}" upper="${pi/2}" velocity="0.5"/>
        <parent link="link_5"/>
        <child link="link_6"/>
        <origin rpy="0 0 0" xyz="0 ${0.228778 - .186507} ${.27839 - (0.277517)}"/>
    </joint>

    <link name="ee">
        <visual>
            <geometry>
                <sphere radius=".01"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0"/>
        </visual>
    </link>

    <joint name="link_6_to_ee" type="fixed">
        <parent link="link_6"/>
        <child link="ee"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
    </joint>

</robot>
